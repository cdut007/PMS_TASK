        android:background="@null"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/null_drawable"
        android:text="@string/no_value"
        android:textColor="@color/detail_gray"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>