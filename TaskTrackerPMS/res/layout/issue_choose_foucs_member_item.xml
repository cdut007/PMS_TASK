<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     xmlns:widgets="http://schemas.android.com/apk/res-auto"
   
    android:layout_gravity="center_vertical"
    android:minHeight="50dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
            android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.thirdpart.widget.ChooseItemView
            android:id="@+id/common_add_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            widgets:customName=""
            widgets:customContent="选择关注人"
            widgets:onlybtn="true"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp" />

        <com.thirdpart.widget.TouchImage
            android:id="@+id/common_remove_item_content"
            android:layout_width="0dp"
            android:src="@drawable/shanchu"
            android:textColor="@color/gray"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

      
    </LinearLayout>

</LinearLayout>